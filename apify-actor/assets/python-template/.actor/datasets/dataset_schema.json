{
    "actorSpecification": 1,
    "fields": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "title": "Scraped Item",
        "description": "An item scraped from the target website",
        "required": ["url", "title"],
        "properties": {
            "url": {
                "type": "string",
                "title": "Source URL",
                "description": "The URL where this item was found",
                "format": "uri"
            },
            "title": {
                "type": "string",
                "title": "Title",
                "description": "The title or name of the item"
            },
            "timestamp": {
                "type": "string",
                "title": "Timestamp",
                "description": "When this item was scraped",
                "format": "date-time"
            }
        },
        "additionalProperties": true
    },
    "views": {
        "overview": {
            "title": "Overview",
            "description": "Overview of scraped items",
            "transformation": {
                "fields": [
                    "url",
                    "title",
                    "timestamp"
                ]
            },
            "display": {
                "component": "table",
                "properties": {
                    "url": {
                        "label": "URL",
                        "format": "link"
                    },
                    "title": {
                        "label": "Title",
                        "format": "text"
                    },
                    "timestamp": {
                        "label": "Scraped At",
                        "format": "date"
                    }
                }
            }
        }
    }
}
